<script>
	function showdiv(){
		$("#mydiv").show();
	}
	
	function hiddendiv(){
		$("#mydiv").hide();
	}
	
	function submdata(){
		var myname = $("#myname").val();
		var mytel = $("#mytel").val();
		var from_user = $("#from_user").val();
		if(myname == ''){
			alert("用户名不能为空!");
			return
			}
		if (mytel == '') {

			alert("手机号不对或为空!");

			return
		}
		reg=/^0{0,1}(13[0-9]|145|15[0-9]|153|156|18[0-9])[0-9]{8}$/i;

		if(!reg.test(mytel)){   

			alert(mytel);
			return
		}
		var submitData = {};
    		submitData.myname = myname;
    		submitData.mytel =mytel;
			submitData.from_user =from_user;
		 $.post('mobile.php?act=module&name=bg&do=qiandao&weid=2', submitData, function(data) {
    
		if (data.success == 'true') {

			alert(data.msg);
			window.location = data.url;
			return

		}
		if (data.success == 'error') {

			alert(data.msg);
			//window.location = data.url;
			return

		}else {} },"json")
	}
</script>
